                    <ToggleButton Content="Aa Aa"
                                  FontWeight="Medium"
                                  Height="32"
                                  ToolTipService.ToolTip="Capitalize Each Word"
                                  Style="{StaticResource CustomToggleButtonStyle}" />
                    <AppBarSeparator Margin="5,0,5,0" />
                    <ToggleButton Content="&#xEA40;"
                                  FontFamily="Segoe Fluent Icons"
                                  Height="32"
                                  ToolTipService.ToolTip="Enumerate items"
                                  Style="{StaticResource CustomToggleButtonStyle}" />
                </StackPanel>
             

                

                </StackPanel>



            <Rectangle Height="1"
