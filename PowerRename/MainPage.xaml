                    <ToggleButton Content="&#xE12F;"
                                  Height="32"
                                  IsChecked="True"
                                  FontFamily="Segoe Fluent Icons"
                                  ToolTipService.ToolTip="Include subfolders"
                                  Style="{StaticResource CustomToggleButtonStyle}" />


                </StackPanel>


                <TextBlock Text="Text formatting" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,20,0,8"/>


