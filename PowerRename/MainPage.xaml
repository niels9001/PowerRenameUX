                        Opacity="0"
                        Value="150" />
                                <StackPanel Name="PaneStackPanel" 
                     Margin="0,0,20,0" >
                                    <ListView   ItemsSource="{x:Bind ExplorerItems}" ItemTemplateSelector="{StaticResource ListExplorerItemTemplateSelector}"/>
                                </StackPanel>
                            </Grid>
                        </SplitView.Pane>
                        <Grid Name="ContentGrid" Margin="0,-14,0,0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Other listview with renamed items"  Foreground="Red"/>
                            <ListView   ItemsSource="{x:Bind ExplorerItems}" Grid.Row="1" ItemTemplateSelector="{StaticResource RenamedListExplorerItemTemplateSelector}" />
                        </Grid>
                    </SplitView>
                </Grid>
                --><!--<muxc:TreeView x:Name="FileTree" Margin="2,12,12,12"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               ItemsSource="{x:Bind ExplorerItems}" 
                               ItemTemplateSelector="{StaticResource ExplorerItemTemplateSelector}" SelectionMode="Multiple"/>--><!--
            </ScrollViewer>-->
         
        </Grid>


        <!--<TextBlock Text="Preview results"
                   FontWeight="Bold"
                   FontSize="16"
                   Style="{ThemeResource TitleTextBlockStyle}"
                   VerticalAlignment="Center"
                   Margin="12,24,0,0"/>-->

        <!--<TextBlock Text="Rename criteria"
                   FontWeight="Bold"
                   FontSize="16"
                   Style="{ThemeResource TitleTextBlockStyle}"
                   VerticalAlignment="Center"
                   Margin="12,48,0,0" />-->

        <Grid Grid.Column="0"  Grid.Row="1" 
                                VerticalAlignment="Stretch" 
                                HorizontalAlignment="Stretch" 
                                Margin="20,0,20,20"
                                                       
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="48" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" Padding="0,0,0,16">

                <Grid>
                    
             
                <TextBox x:Name="SearchForTxt" PlaceholderText="Search for" Height="48" Padding="12,12,0,0" VerticalContentAlignment="Center"  >
                    <!--<TextBox.Header>
                        <TextBlock Text="Search for" FontWeight="SemiBold"/>
                    </TextBox.Header>-->
                </TextBox>

                    <Button FontFamily="Segoe Fluent Icons"
                          VerticalAlignment="Center"
                            Visibility="{Binding ElementName=RegExButton, Path=IsChecked}"
                            Height="32"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Content="&#xE946;"
                            Foreground="{ThemeResource SystemColorControlAccentBrush}"
                            HorizontalAlignment="Right">
                        <Button.Flyout>
                            <Flyout x:Name="RegExFlyout">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="28" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="48" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="RegEx cheatsheet"
                                               FontWeight="SemiBold" />
                                    <ListView ItemsSource="{x:Bind RegExShortcuts}"
                                              Grid.Row="1"
                                              ItemClick="RegEx_ItemClick"
                                              IsItemClickEnabled="True"
                                              Margin="-4,12,0,0">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="local:PatternSnippet">
                                                <Grid ColumnSpacing="8"
                                                      Margin="-10,0,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="48" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border CornerRadius="4"
                                                            Padding="8"
                                                            HorizontalAlignment="Left"
                                                            BorderThickness="1"
                                                            BorderBrush="{ThemeResource ButtonBorderBrush}"
                                                            Background="{ThemeResource ButtonBackground}">
                                                        <TextBlock FontFamily="Consolas"
                                                                   Foreground="{ThemeResource ButtonForeground}"
                                                                   Text="{x:Bind Code}" />
                                                    </Border>

                                                    <TextBlock Text="{x:Bind Description}"
                                                               FontSize="12"
                                                               Grid.Column="1"
                                                               Margin="0,0,0,0"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               VerticalAlignment="Center" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <HyperlinkButton Grid.Row="2"
                                                     VerticalAlignment="Bottom">
                                        <TextBlock Text="Learn more about RegEx" />
                                    </HyperlinkButton>
                                </Grid>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </Grid>

               
                <CheckBox Content="Use RegEx" x:Name="RegExButton" Margin="2,12,0,0" />
                <CheckBox Content="Match all occurences"  Margin="2,4,0,0" />
                <CheckBox Content="Case sensitive"  Margin="2,4,0,0" />
                


                <Rectangle Height="1" Fill="{ThemeResource CardStrokeColorDefaultBrush}" HorizontalAlignment="Stretch" Margin="0,24,0,16" />
                <Grid>
                    <TextBox Margin="0,0,0,0"
                             PlaceholderText="Replace with"
                             Height="48"
                             x:Name="ReplaceForTxt"
                             Padding="12,12,0,0"
                             VerticalContentAlignment="Center">
                        <!--<TextBox.Header>
                        <TextBlock Text="Replace with" FontWeight="SemiBold"/>
                    </TextBox.Header>-->
                    </TextBox>
                    <Button FontFamily="Segoe Fluent Icons"
                            VerticalAlignment="Center"
                            
                            Height="32"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Content="&#xE946;"
                            Foreground="{ThemeResource SystemColorControlAccentBrush}"
